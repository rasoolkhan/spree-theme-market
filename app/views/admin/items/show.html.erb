<h1><%= @item.name %></h1>
<div>
  <img src="<%= @item.image_preview %>"/>
  <p>Description: <%= @item.description %></p>
  <p>Price: $<%= @item.price %></p>
  <p>Code: <%= @item.code %></p>
  <p>Added on: <%= @item.created_at.to_date %></p>
  <p>Last Updated on: <%= @item.updated_at.to_date %></p>
</div>

<div>
  <p><%= link_to('Edit', edit_admin_item_path(@item))%> | <%= link_to('Delete this Theme', admin_item_path(@item), method: :delete, data: { confirm: 'Are You Sure?'}) %></p>
</div>