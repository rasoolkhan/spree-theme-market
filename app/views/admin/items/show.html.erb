<h2><%= @item.name %></h2>
<div>
  <img src="<%= @item.image_preview %>"/>
  <p><b>Description:</b> <%= @item.description %></p>
  <p><b>Price:</b> $<%= @item.price %></p>
  <p><b>Code: </b><%= @item.code %></p>
  <p><b>Added on:</b> <%= @item.created_at.to_date %></p>
  <p><b>Last Updated on:</b> <%= @item.updated_at.to_date %></p>
</div>

<div>
  <p><%= link_to('Edit', edit_admin_item_path(@item))%> | <%= link_to('Delete this Theme', admin_item_path(@item), method: :delete, data: { confirm: 'Are You Sure?'}) %> </p>
</div>

<div><p><%= link_to('Back to My Themes', admin_items_path) %></p></div>